<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="owl_playground.playground" owl="1">
        <div class="p-3">
            hello world
        </div>
        <Counter />
        <div>
            <input placeholder="Enter a new task" t-on-keyup="addTodo" t-ref="inputRef"/>
        </div>
        <div t-foreach="todos" t-as="todo" t-key="todo.id">
            <Todo id="todo.id" description="todo.description" done="todo.done" toggleState.bind="toggleState"/>
        </div>
    </t>
</templates>
