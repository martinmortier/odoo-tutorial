<odoo>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Estate action</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_name': 'qewq'}</field>
    </record>

    <record id="estate_model_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree
                    decoration-success="state=='offer_received' or state=='offer_accepted'"
                    decoration-bf="state=='offer_accepted'"
                    decoration-muted="state=='sold'"
            >
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price" string="Expected price"/>
                <field name="selling_price" string="Selling price"/>
                <field name="date_availability" string="Available From"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

     <record id="estate_model_view_form" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header states="new, offer_received, offer_accepted">
                    <button name="action_sold" class='oe_highlight' type="object" string="SOLD"/>
                    <button name="action_cancel" type="object" string="CANCELED"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name" placeholder="Property Title"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <group>
                            <group>
                                <field name="property_type_id" options="{'no_create': True}"/>
                                <field name="postcode"/>
                                <field name="date_availability" attrs="{'invisible': 1, 'optional': 1 }"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="total_area"/>
                                    <field name="best_price" />
                                </group>
                            </page>
                            <page string="Offers">
                                <group>
                                    <field name="offer_ids" ref="estate_model_offer_view_tree" />
                                </group>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="sales_person_id" />
                                    <field name="buyer_id" />
                                </group>
                            </page>
                        </notebook>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_model_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area','>=',self)]"/>
                <field name="facades"/>
                <separator/>
                <filter name="expected_price" domain="['|',('state','=','new'),('state','=','sold')]"/>
                <filter name="groupby_postcode" string="Postcode" context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>
</odoo>