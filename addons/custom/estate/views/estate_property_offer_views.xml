<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="res_model">estate.property.offer</field>
        <field name="views">form, tree</field>
<!--        Active_id = the current record -->
        <field name="domain">[('property_type_id','=', active_id)]</field>
    </record>

    <record id="estate_model_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="status" />
                        <field name="validity" />
                        <field name="date_deadline" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <record id="estate_model_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree
                    decoration-danger="status=='refused'"
                    decoration-success="status=='accepted'"
                    editable="bottom">
                <field name="price" />
                <field name="partner_id" />
                <field name="status" invisible="1"/>
                <field name="validity" />
                <button name="action_accept" type="object" icon="fa-check" attrs="{'invisible': [('status', '=', False)]}"/>
                <button name="action_refuse" type="object" icon="fa-ban" attrs="{'invisible': [('status', '=', False)]}"/>
                <field name="date_deadline" />
            </tree>
        </field>
    </record>
</odoo>